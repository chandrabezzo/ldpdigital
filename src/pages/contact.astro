<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Intersection Observer for animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    // Observe all fade-in elements
    const fadeElements = document.querySelectorAll('.fade-in-up');
    fadeElements.forEach(el => observer.observe(el));

    // FAQ functionality
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      question.addEventListener('click', () => {
        const isActive = item.classList.contains('active');
        
        // Close all FAQ items
        faqItems.forEach(faq => faq.classList.remove('active'));
        
        // Open clicked item if it wasn't active
        if (!isActive) {
          item.classList.add('active');
        }
      });
    });

    // Contact form handling
    const contactForm = document.getElementById('contactForm');
    const submitBtn = contactForm.querySelector('.submit-btn');
    const btnText = submitBtn.querySelector('.btn-text');
    const btnLoading = submitBtn.querySelector('.btn-loading');

    contactForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Show loading state
      btnText.style.display = 'none';
      btnLoading.style.display = 'flex';
      submitBtn.disabled = true;

      try {
        // Collect form data
        const formData = new FormData(contactForm);
        
        // Get selected services
        const selectedServices = [];
        const serviceCheckboxes = contactForm.querySelectorAll('input[name="services"]:checked');
        serviceCheckboxes.forEach(checkbox => {
          const serviceText = checkbox.parentElement.querySelector('span:last-child').textContent;
          selectedServices.push(serviceText);
        });

        // Get industry and budget text values
        const industrySelect = document.getElementById('industry');
        const budgetSelect = document.getElementById('budget');
        const industryText = industrySelect.options[industrySelect.selectedIndex]?.text || '';
        const budgetText = budgetSelect.options[budgetSelect.selectedIndex]?.text || '';

        // Format WhatsApp message
        let message = `*KONSULTASI SOFTWARE - LDP DIGITAL*\n\n`;
        message += `*Informasi Kontak:*\n`;
        message += `• Nama: ${formData.get('firstName')} ${formData.get('lastName')}\n`;
        message += `• Email: ${formData.get('email')}\n`;
        message += `• Telepon: ${formData.get('phone') || 'Tidak diisi'}\n`;
        message += `• Perusahaan: ${formData.get('company')}\n\n`;
        
        if (industryText && industryText !== 'Pilih Industri') {
          message += `*Industri:* ${industryText}\n`;
        }
        
        if (budgetText && budgetText !== 'Pilih Budget') {
          message += `*Budget Range:* ${budgetText}\n`;
        }
        
        if (selectedServices.length > 0) {
          message += `\n*Layanan yang Dibutuhkan:*\n`;
          selectedServices.forEach(service => {
            message += `• ${service}\n`;
          });
        }
        
        if (formData.get('message')) {
          message += `\n*Deskripsi Proyek:*\n${formData.get('message')}\n`;
        }
        
        message += `\n---\n*Dikirim melalui website LDP Digital*`;

        // Encode message for URL
        const encodedMessage = encodeURIComponent(message);
        
        // WhatsApp URL
        const whatsappUrl = `https://wa.me/+6285183119529?text=${encodedMessage}`;
        
        // Simulate brief loading then redirect
        await new Promise(resolve => setTimeout(resolve, 1000));
        
        // Open WhatsApp
        window.open(whatsappUrl, '_blank');
        
        // Show success message and reset form
        const successMessage = document.querySelector('[data-i18n="contact.form.alert.success"]')?.textContent || 'Anda akan diarahkan ke WhatsApp untuk mengirim pesan. Terima kasih!';
        alert(successMessage);
        contactForm.reset();
        
      } catch (error) {
        console.error('Error:', error);
        const errorMessage = document.querySelector('[data-i18n="contact.form.alert.error"]')?.textContent || 'Maaf, terjadi kesalahan. Silakan coba lagi atau hubungi kami langsung.';
        alert(errorMessage);
      } finally {
        // Reset button state
        btnText.style.display = 'inline';
        btnLoading.style.display = 'none';
        submitBtn.disabled = false;
      }
    });

    // Form validation enhancements
    const requiredFields = contactForm.querySelectorAll('[required]');
    requiredFields.forEach(field => {
      field.addEventListener('blur', () => {
        if (!field.value.trim()) {
          field.style.borderColor = 'var(--error-red)';
        } else {
          field.style.borderColor = 'var(--success-green)';
        }
      });

      field.addEventListener('input', () => {
        if (field.style.borderColor === 'rgb(239, 68, 68)') { // error-red
          field.style.borderColor = 'var(--neutral-200)';
        }
      });
    });

    // Email validation
    const emailField = document.getElementById('email');
    emailField.addEventListener('blur', () => {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (emailField.value && !emailRegex.test(emailField.value)) {
        emailField.style.borderColor = 'var(--error-red)';
      } else if (emailField.value) {
        emailField.style.borderColor = 'var(--success-green)';
      }
    });

    // Phone validation
    const phoneField = document.getElementById('phone');
    phoneField.addEventListener('input', (e) => {
      // Allow only numbers, spaces, +, -, and parentheses
      e.target.value = e.target.value.replace(/[^0-9\s\+\-\(\)]/g, '');
    });
  });
</script>