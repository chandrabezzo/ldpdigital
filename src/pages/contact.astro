---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Kontak Kami - LDP Digital | Konsultasi Software Solutions"
  description="Hubungi LDP Digital untuk konsultasi gratis tentang kebutuhan software perusahaan Anda. Tim expert siap membantu transformasi digital bisnis Anda."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="contact-hero">
      <div class="hero-background">
        <img 
          src="https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=1200" 
          alt="Contact us for software solutions"
          loading="eager"
        />
        <div class="hero-overlay"></div>
      </div>
      <div class="container">
        <div class="hero-content fade-in-up">
          <h1 data-i18n="contact.hero.title">Hubungi Kami</h1>
          <p class="hero-subtitle" data-i18n="contact.hero.subtitle">Konsultasikan kebutuhan software perusahaan Anda dengan tim expert kami</p>
          <div class="hero-breadcrumb">
            <a href="/" data-i18n="breadcrumb.home">Beranda</a>
            <span>/</span>
            <span data-i18n="breadcrumb.contact">Kontak</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
      <div class="container">
        <div class="contact-content">
          <!-- Contact Form -->
          <div class="contact-form-container fade-in-up">
            <div class="form-header">
              <h2 data-i18n="contact.form.title">Konsultasi Gratis</h2>
              <p data-i18n="contact.form.description">Ceritakan kebutuhan software perusahaan Anda. Tim kami akan memberikan solusi terbaik.</p>
            </div>

            <form class="contact-form" id="contactForm">
              <div class="form-row">
                <div class="form-group">
                  <label for="firstName" data-i18n="contact.form.firstName">Nama Depan *</label>
                  <input type="text" id="firstName" name="firstName" required>
                </div>
                <div class="form-group">
                  <label for="lastName" data-i18n="contact.form.lastName">Nama Belakang *</label>
                  <input type="text" id="lastName" name="lastName" required>
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="email" data-i18n="contact.form.email">Email *</label>
                  <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                  <label for="phone" data-i18n="contact.form.phone">Nomor Telepon</label>
                  <input type="tel" id="phone" name="phone" required>
                </div>
              </div>

              <div class="form-group">
                <label for="company" data-i18n="contact.form.company">Nama Perusahaan *</label>
                <input type="text" id="company" name="company" required>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="industry" data-i18n="contact.form.industry">Industri</label>
                  <select id="industry" name="industry">
                    <option value="">Pilih Industri</option>
                    <option value="construction">Konstruksi & Engineering</option>
                    <option value="manufacturing">Manufaktur</option>
                    <option value="retail">Retail & E-commerce</option>
                    <option value="healthcare">Healthcare</option>
                    <option value="education">Pendidikan</option>
                    <option value="finance">Keuangan</option>
                    <option value="logistics">Logistik</option>
                    <option value="other">Lainnya</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="budget" data-i18n="contact.form.budget">Budget Range</label>
                  <select id="budget" name="budget">
                    <option value="" data-i18n="contact.form.budget.placeholder">Pilih Budget</option>
                    <option value="under-50" data-i18n="contact.form.budget.under50">< 50 Juta</option>
                    <option value="50-100" data-i18n="contact.form.budget.50to100">50 - 100 Juta</option>
                    <option value="100-250" data-i18n="contact.form.budget.100to250">100 - 250 Juta</option>
                    <option value="250-500" data-i18n="contact.form.budget.250to500">250 - 500 Juta</option>
                    <option value="over-500" data-i18n="contact.form.budget.over500">> 500 Juta</option>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="services" data-i18n="contact.form.service">Layanan yang Dibutuhkan *</label>
                <div class="checkbox-group">
                  <label class="checkbox-item">
                    <input type="checkbox" name="services" value="erp">
                    <span class="checkmark"></span>
                    <span data-i18n="contact.form.services.erp">Sistem ERP</span>
                  </label>
                  <label class="checkbox-item">
                    <input type="checkbox" name="services" value="custom">
                    <span class="checkmark"></span>
                    <span data-i18n="contact.form.services.custom">Software Custom</span>
                  </label>
                  <label class="checkbox-item">
                    <input type="checkbox" name="services" value="website">
                    <span class="checkmark"></span>
                    <span data-i18n="contact.form.services.website">Website Development</span>
                  </label>
                  <label class="checkbox-item">
                    <input type="checkbox" name="services" value="mobile">
                    <span class="checkmark"></span>
                    <span data-i18n="contact.form.services.mobile">Mobile App</span>
                  </label>
                  <label class="checkbox-item">
                    <input type="checkbox" name="services" value="consulting">
                    <span class="checkmark"></span>
                    <span data-i18n="contact.form.services.consulting">Konsultasi Digital</span>
                  </label>
                  <label class="checkbox-item">
                    <input type="checkbox" name="services" value="maintenance">
                    <span class="checkmark"></span>
                    <span data-i18n="contact.form.services.maintenance">Maintenance & Support</span>
                  </label>
                </div>
              </div>

              <div class="form-group">
                <label for="message" data-i18n="contact.form.message">Deskripsi Proyek *</label>
                <textarea id="message" name="message" rows="5" data-i18n-placeholder="contact.form.message.placeholder" required></textarea>
              </div>

              <div class="form-group">
                <label class="checkbox-item privacy">
                  <input type="checkbox" name="privacy" required>
                  <span class="checkmark"></span>
                  <span data-i18n="contact.form.privacy">Saya setuju dengan <a href="/privacy" data-i18n="contact.form.privacy.policy">Kebijakan Privasi</a> dan <a href="/terms" data-i18n="contact.form.privacy.terms">Syarat & Ketentuan</a></span>
                </label>
              </div>

              <button type="submit" class="btn btn-primary submit-btn">
                <span class="btn-text" data-i18n="contact.form.submit">Kirim Pesan</span>
                <span class="btn-loading" style="display: none;">
                  <svg class="spinner" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-dasharray="31.416" stroke-dashoffset="31.416">
                      <animate attributeName="stroke-dasharray" dur="2s" values="0 31.416;15.708 15.708;0 31.416" repeatCount="indefinite"/>
                      <animate attributeName="stroke-dashoffset" dur="2s" values="0;-15.708;-31.416" repeatCount="indefinite"/>
                    </circle>
                  </svg>
                  <span data-i18n="contact.form.loading">Mengirim...</span>
                </span>
              </button>
            </form>
            
            <!-- Hidden elements for i18n alert messages -->
            <div style="display: none;">
              <span data-i18n="contact.form.alert.success">Anda akan diarahkan ke WhatsApp untuk mengirim pesan. Terima kasih!</span>
              <span data-i18n="contact.form.alert.error">Maaf, terjadi kesalahan. Silakan coba lagi atau hubungi kami langsung.</span>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="contact-info fade-in-up">
            <div class="info-card">
              <h3 data-i18n="contact.info.title">Informasi Kontak</h3>
              <div class="info-items">
                <div class="info-item">
                  <div class="info-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                    </svg>
                  </div>
                  <div class="info-content">
                    <h4 data-i18n="contact.info.address.title">Alamat</h4>
                    <p>Ruko No. 2 Pesona Bali Residence Jl. Cigugur Girang Jl. Waruga Jaya No.108, Ciwaruga, Kec. Parongpong, Kabupaten Bandung Barat, Jawa Barat 40559<br>
                    <small data-i18n="contact.info.address.description">Alamat lengkap pertemuan akan diberikan setelah konfirmasi meeting</small></p>
                  </div>
                </div>

                <div class="info-item">
                  <div class="info-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                    </svg>
                  </div>
                  <div class="info-content">
                    <h4 data-i18n="contact.info.phone.title">Telepon</h4>
                    <p><a href="tel:+6281223598599">+62 81 223598599</a><br>
                    <small data-i18n="contact.info.phone.description">Senin - Jumat: 08:00 - 17:00 WIB</small></p>
                  </div>
                </div>

                <div class="info-item">
                  <div class="info-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                    </svg>
                  </div>
                  <div class="info-content">
                    <h4 data-i18n="contact.info.email.title">Email</h4>
                    <p><a href="mailto:info@ldpdigital.co.id">info@ldpdigital.co.id</a><br>
                    <small data-i18n="contact.info.email.description">Respon dalam 24 jam</small></p>
                  </div>
                </div>

                <div class="info-item">
                  <div class="info-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.087"/>
                    </svg>
                  </div>
                  <div class="info-content">
                    <h4 data-i18n="contact.info.whatsapp.title">WhatsApp</h4>
                    <p><a href="https://wa.me/6281223598599" target="_blank">+62 81 223598599</a><br>
                    <small data-i18n="contact.info.whatsapp.description">Chat langsung untuk respon cepat</small></p>
                  </div>
                </div>
              </div>
            </div>

            <div class="info-card">
              <h3 data-i18n="contact.info.schedule.title">Jam Operasional</h3>
              <div class="schedule-items">
                <div class="schedule-item">
                  <span class="day" data-i18n="contact.info.schedule.day">Senin - Jumat</span>
                  <span class="time">08:00 - 17:00 WIB</span>
                </div>
                <div class="schedule-item">
                  <span class="day" data-i18n="contact.info.schedule.saturday">Sabtu</span>
                  <span class="time">09:00 - 15:00 WIB</span>
                </div>
                <div class="schedule-item">
                  <span class="day" data-i18n="contact.info.schedule.sunday">Minggu</span>
                  <span class="time" data-i18n="contact.info.schedule.closed">Tutup</span>
                </div>
              </div>
              <p class="schedule-note" data-i18n="contact.info.schedule.note">
                <strong>Emergency Support:</strong> Tersedia 24/7 untuk klien dengan kontrak maintenance</strong>
              </p>
            </div>

            <div class="info-card">
              <h3 data-i18n="contact.info.process.title">Proses Konsultasi</h3>
              <div class="process-steps">
                <div class="process-step">
                  <div class="step-number">1</div>
                  <div class="step-text">
                    <strong data-i18n="contact.info.process.step1">Kirim Form</strong><br>
                    <small data-i18n="contact.info.process.step1.desc">Isi form konsultasi dengan detail kebutuhan Anda</small>
                  </div>
                </div>
                <div class="process-step">
                  <div class="step-number">2</div>
                  <div class="step-text">
                    <strong data-i18n="contact.info.process.step2">Konfirmasi Tim</strong><br>
                    <small data-i18n="contact.info.process.step2.desc">Tim kami akan menghubungi dalam 24 jam</small>
                  </div>
                </div>
                <div class="process-step">
                  <div class="step-number">3</div>
                  <div class="step-text">
                    <strong data-i18n="contact.info.process.step3">Meeting & Proposal</strong><br>
                    <small data-i18n="contact.info.process.step3.desc">Diskusi kebutuhan dan presentasi solusi</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section">
      <div class="container">
        <div class="section-header fade-in-up">
          <h2 data-i18n="contact.faq.title">Pertanyaan yang Sering Diajukan</h2>
          <p data-i18n="contact.faq.description">Jawaban untuk pertanyaan umum tentang layanan kami</p>
        </div>

        <div class="faq-container">
          <div class="faq-item fade-in-up">
            <button class="faq-question">
              <span data-i18n="contact.faq.question1">Berapa lama waktu pengembangan software custom?</span>
              <svg class="faq-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6,9 12,15 18,9"/>
              </svg>
            </button>
            <div class="faq-answer">
              <p data-i18n="contact.faq.answer1">Waktu pengembangan bervariasi tergantung kompleksitas proyek. Software sederhana membutuhkan 2-3 bulan, sedangkan sistem ERP kompleks bisa memakan waktu 6-12 bulan. Kami akan memberikan timeline yang jelas setelah analisis kebutuhan.</p>
            </div>
          </div>

          <div class="faq-item fade-in-up">
            <button class="faq-question">
              <span data-i18n="contact.faq.question2">Apakah ada garansi untuk software yang dikembangkan?</span>
              <svg class="faq-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6,9 12,15 18,9"/>
              </svg>
            </button>
            <div class="faq-answer">
              <p data-i18n="contact.faq.answer2">Ya, kami memberikan garansi 1 tahun untuk bug fixing dan maintenance dasar. Setelah periode garansi, tersedia paket maintenance dengan berbagai pilihan sesuai kebutuhan.</p>
            </div>
          </div>

          <div class="faq-item fade-in-up">
            <button class="faq-question">
              <span data-i18n="contact.faq.question3">Bagaimana sistem pembayaran untuk proyek software?</span>
              <svg class="faq-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6,9 12,15 18,9"/>
              </svg>
            </button>
            <div class="faq-answer">
              <p data-i18n="contact.faq.answer3">Sistem pembayaran fleksibel: 30% down payment, 40% saat development milestone, dan 30% saat delivery. Untuk proyek besar, tersedia opsi pembayaran bertahap sesuai progress development.</p>
            </div>
          </div>

          <div class="faq-item fade-in-up">
            <button class="faq-question">
              <span data-i18n="contact.faq.question4">Apakah bisa integrasi dengan sistem existing perusahaan?</span>
              <svg class="faq-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6,9 12,15 18,9"/>
              </svg>
            </button>
            <div class="faq-answer">
              <p data-i18n="contact.faq.answer4">Tentu saja. Kami memiliki pengalaman dalam integrasi dengan berbagai sistem existing seperti accounting software, CRM, atau database legacy. Tim kami akan melakukan assessment terlebih dahulu.</p>
            </div>
          </div>

          <div class="faq-item fade-in-up">
            <button class="faq-question">
              <span data-i18n="contact.faq.question5">Apakah tersedia training untuk user setelah implementasi?</span>
              <svg class="faq-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6,9 12,15 18,9"/>
              </svg>
            </button>
            <div class="faq-answer">
              <p data-i18n="contact.faq.answer5">Ya, training user termasuk dalam paket implementasi. Kami menyediakan training on-site, dokumentasi lengkap, dan video tutorial. Support team juga tersedia untuk membantu adaptasi sistem.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  main {
    padding-top: 0;
  }

  /* Contact Hero */
  .contact-hero {
    position: relative;
    height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    margin-top: 80px;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 102, 204, 0.8);
  }

  .hero-content h1 {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-sm);
    color: white;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.9;
    color: white;
  }

  .hero-breadcrumb {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xs);
    font-size: 1rem;
    opacity: 0.8;
  }

  .hero-breadcrumb a {
    color: white;
    text-decoration: none;
    transition: var(--transition);
  }

  .hero-breadcrumb a:hover {
    opacity: 0.8;
  }

  /* Contact Section */
  .contact-section {
    padding: var(--spacing-2xl) 0;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-2xl);
    align-items: start;
  }

  /* Contact Form */
  .contact-form-container {
    background: white;
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-2xl);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--neutral-200);
  }

  .form-header {
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  .form-header h2 {
    font-size: 2rem;
    margin-bottom: var(--spacing-sm);
    color: var(--primary-blue);
  }

  .form-header p {
    font-size: 1.125rem;
    color: var(--neutral-600);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-group label {
    font-weight: 500;
    color: var(--neutral-700);
    font-size: 0.9rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem 1rem;
    border: 2px solid var(--neutral-200);
    border-radius: var(--border-radius);
    font-size: 1rem;
    transition: var(--transition);
    background: white;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .checkbox-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-sm);
    margin-top: var(--spacing-xs);
  }

  .checkbox-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    cursor: pointer;
    font-size: 0.9rem;
    color: var(--neutral-700);
  }

  .checkbox-item input[type="checkbox"] {
    display: none;
  }

  .checkmark {
    width: 20px;
    height: 20px;
    border: 2px solid var(--neutral-300);
    border-radius: 4px;
    position: relative;
    transition: var(--transition);
  }

  .checkbox-item input[type="checkbox"]:checked + .checkmark {
    background: var(--primary-blue);
    border-color: var(--primary-blue);
  }

  .checkbox-item input[type="checkbox"]:checked + .checkmark::after {
    content: '✓';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 12px;
    font-weight: bold;
  }

  .checkbox-item.privacy {
    margin-top: var(--spacing-sm);
