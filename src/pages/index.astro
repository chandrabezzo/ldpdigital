---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="LDP Digital - Software Solutions Partner | PT. Lentera Duta Persada">
  <Header />
  <main>
    <Hero />
    
    <!-- Services Overview Section -->
    <section class="services-overview" id="services">
      <div class="container">
        <div class="section-header fade-in-up">
          <h2 data-i18n="services.title">Layanan Unggulan Kami</h2>
          <p data-i18n="services.subtitle">Solusi teknologi terdepan untuk mengoptimalkan operasional bisnis Anda</p>
        </div>

        <div class="services-grid">
          <div class="service-card fade-in-up">
            <div class="service-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                <polyline points="3.27,6.96 12,12.01 20.73,6.96"/>
                <line x1="12" y1="22.08" x2="12" y2="12"/>
              </svg>
            </div>
            <h3 data-i18n="services.erp.title">Sistem ERP Terintegrasi</h3>
            <p data-i18n="services.erp.description">Enterprise Resource Planning yang menghubungkan semua aspek bisnis Anda dalam satu platform terpadu.</p>
            <ul>
              <li>Manajemen Keuangan</li>
              <li>Inventory & Supply Chain</li>
              <li>Human Resources</li>
              <li>Customer Relations</li>
            </ul>
            <a href="/services#erp" class="service-link" data-i18n="services.learn_more">Pelajari Lebih Lanjut</a>
          </div>

          <div class="service-card fade-in-up">
            <div class="service-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
                <line x1="8" y1="21" x2="16" y2="21"/>
                <line x1="12" y1="17" x2="12" y2="21"/>
              </svg>
            </div>
            <h3 data-i18n="services.custom.title">Software Custom</h3>
            <p data-i18n="services.custom.description">Pengembangan aplikasi khusus sesuai kebutuhan unik operasional perusahaan Anda.</p>
            <ul>
              <li>Analisis Kebutuhan Mendalam</li>
              <li>User Interface Modern</li>
              <li>Integrasi System Existing</li>
              <li>Training & Support</li>
            </ul>
            <a href="/services#custom" class="service-link" data-i18n="services.learn_more">Pelajari Lebih Lanjut</a>
          </div>

          <div class="service-card fade-in-up">
            <div class="service-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14.828 14.828a4 4 0 0 1-5.656 0M9 10h.01M15 10h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 0 1-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <h3 data-i18n="services.consulting.title">Konsultasi Digital</h3>
            <p data-i18n="services.consulting.description">Analisis mendalam terhadap proses bisnis untuk menemukan solusi teknologi yang optimal.</p>
            <ul>
              <li>Business Process Analysis</li>
              <li>Technology Roadmap</li>
              <li>Digital Transformation</li>
              <li>Implementation Strategy</li>
            </ul>
            <a href="/services#consulting" class="service-link" data-i18n="services.learn_more">Pelajari Lebih Lanjut</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Industries Section -->
    <section class="industries" id="industries">
      <div class="container">
        <div class="section-header fade-in-up">
          <h2 data-i18n="industries.title">Industri yang Kami Layani</h2>
          <p data-i18n="industries.subtitle">Spesialisasi dalam konstruksi dengan pengalaman luas di berbagai sektor</p>
        </div>

        <div class="industries-content">
          <div class="industry-main fade-in-up">
            <div class="industry-card featured">
              <div class="industry-image">
                <img src="https://images.pexels.com/photos/416405/pexels-photo-416405.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Construction industry">
              </div>
              <div class="industry-content">
                <h3 data-i18n="industries.construction.title">Konstruksi & Engineering</h3>
                <p class="industry-subtitle" data-i18n="industries.construction.subtitle">Fokus Utama Kami</p>
                <p data-i18n="industries.construction.description">Dengan pengalaman mendalam di industri konstruksi, kami memahami kompleksitas manajemen proyek, pengadaan material, dan koordinasi tim.</p>
                <ul class="industry-features">
                  <li>Project Management System</li>
                  <li>Material & Equipment Tracking</li>
                  <li>Financial Control & Budgeting</li>
                  <li>Quality Assurance System</li>
                </ul>
                <a href="/industries/construction" class="btn btn-primary" data-i18n="industries.case_study">Lihat Case Study</a>
              </div>
            </div>
          </div>

          <div class="industries-grid">
            <div class="industry-item fade-in-up">
              <div class="industry-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 12l2 2 4-4"/>
                  <path d="M21 12c.552 0 1-.448 1-1V6c0-.552-.448-1-1-1H3c-.552 0-1 .448-1 1v5c0 .552.448 1 1 1h18z"/>
                  <path d="M3 12v7c0 .552.448 1 1 1h16c.552 0 1-.448 1-1v-7"/>
                </svg>
              </div>
              <h4 data-i18n="industries.manufacturing">Manufaktur</h4>
              <p>Sistem produksi dan quality control terintegrasi</p>
            </div>

            <div class="industry-item fade-in-up">
              <div class="industry-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 3h18v18H3V3z"/>
                  <path d="M8 12h8"/>
                  <path d="M8 16h8"/>
                  <path d="M8 8h8"/>
                </svg>
              </div>
              <h4 data-i18n="industries.retail">Retail & E-commerce</h4>
              <p>Point of sale dan manajemen inventory real-time</p>
            </div>

            <div class="industry-item fade-in-up">
              <div class="industry-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
              </div>
              <h4 data-i18n="industries.healthcare">Healthcare</h4>
              <p>Sistem manajemen rumah sakit dan klinik</p>
            </div>

            <div class="industry-item fade-in-up">
              <div class="industry-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M2 3h20v18H2V3z"/>
                  <path d="M8 21v-4"/>
                  <path d="M16 21v-4"/>
                  <path d="M12 21v-6"/>
                </svg>
              </div>
              <h4 data-i18n="industries.education">Pendidikan</h4>
              <p>Learning management dan administrasi akademik</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="why-choose-us">
      <div class="container">
        <div class="section-header fade-in-up">
          <h2 data-i18n="why.title">Mengapa Memilih LDP Digital?</h2>
          <p data-i18n="why.subtitle">Keunggulan yang membuat kami berbeda dari yang lain</p>
        </div>

        <div class="advantages-grid">
          <div class="advantage-card fade-in-up">
            <div class="advantage-number">01</div>
            <h3 data-i18n="why.expertise">Expertise Mendalam</h3>
            <p>Tim developer berpengalaman dengan sertifikasi internasional dan pemahaman mendalam terhadap industri konstruksi.</p>
          </div>

          <div class="advantage-card fade-in-up">
            <div class="advantage-number">02</div>
            <h3 data-i18n="why.technology">Teknologi Terdepan</h3>
            <p>Menggunakan framework dan tools terbaru untuk memastikan performa optimal dan keamanan tinggi.</p>
          </div>

          <div class="advantage-card fade-in-up">
            <div class="advantage-number">03</div>
            <h3 data-i18n="why.support">Support Berkelanjutan</h3>
            <p>Layanan maintenance dan update berkala untuk memastikan sistem selalu berjalan optimal.</p>
          </div>

          <div class="advantage-card fade-in-up">
            <div class="advantage-number">04</div>
            <h3 data-i18n="why.roi">ROI Terbukti</h3>
            <p>Track record meningkatkan efisiensi operasional klien hingga 40% melalui digitalisasi proses bisnis.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content fade-in-up">
          <h2 data-i18n="cta.title">Siap Mentransformasi Bisnis Anda?</h2>
          <p data-i18n="cta.description">Konsultasikan kebutuhan software perusahaan Anda dengan tim expert kami. Gratis dan tanpa komitmen.</p>
          <div class="cta-actions">
            <a href="/contact" class="btn btn-primary" data-i18n="cta.consultation">Konsultasi Sekarang</a>
            <a href="tel:+6221XXXXXXX" class="btn btn-secondary" data-i18n="cta.call">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
              </svg>
              <span data-i18n="cta.call">Hubungi Langsung</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  main {
    padding-top: 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .section-header p {
    font-size: 1.25rem;
    color: var(--neutral-600);
  }

  /* Services Overview */
  .services-overview {
    padding: var(--spacing-2xl) 0;
    background: var(--neutral-50);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-xl);
  }

  .service-card {
    background: white;
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-blue), var(--accent-orange));
    transform: scaleX(0);
    transition: var(--transition);
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .service-card:hover::before {
    transform: scaleX(1);
  }

  .service-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-dark));
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-md);
  }

  .service-icon svg {
    width: 28px;
    height: 28px;
  }

  .service-card h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-sm);
    color: var(--neutral-800);
  }

  .service-card p {
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
  }

  .service-card ul {
    list-style: none;
    margin-bottom: var(--spacing-md);
  }

  .service-card ul li {
    position: relative;
    padding-left: var(--spacing-md);
    margin-bottom: var(--spacing-xs);
    color: var(--neutral-600);
  }

  .service-card ul li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--success-green);
    font-weight: bold;
  }

  .service-link {
    color: var(--primary-blue);
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    transition: var(--transition);
  }

  .service-link:hover {
    color: var(--primary-blue-dark);
  }

  /* Industries */
  .industries {
    padding: var(--spacing-2xl) 0;
  }

  .industries-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-2xl);
  }

  .industry-card.featured {
    background: white;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
  }

  .industry-image {
    height: 400px;
    overflow: hidden;
  }

  .industry-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .industry-content {
    padding: var(--spacing-xl);
  }

  .industry-subtitle {
    color: var(--accent-orange);
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: var(--spacing-xs);
  }

  .industry-content h3 {
    font-size: 1.75rem;
    margin-bottom: var(--spacing-sm);
  }

  .industry-features {
    list-style: none;
    margin: var(--spacing-md) 0;
  }

  .industry-features li {
    position: relative;
    padding-left: var(--spacing-md);
    margin-bottom: var(--spacing-xs);
    color: var(--neutral-600);
  }

  .industry-features li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--primary-blue);
    font-weight: bold;
  }

  .industries-grid {
    display: grid;
    gap: var(--spacing-md);
  }

  .industry-item {
    background: white;
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
    border: 2px solid transparent;
  }

  .industry-item:hover {
    border-color: var(--primary-blue);
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .industry-icon {
    width: 48px;
    height: 48px;
    background: var(--neutral-100);
    color: var(--primary-blue);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-sm);
  }

  .industry-item h4 {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-xs);
  }

  .industry-item p {
    font-size: 0.9rem;
    color: var(--neutral-600);
    margin: 0;
  }

  /* Why Choose Us */
  .why-choose-us {
    padding: var(--spacing-2xl) 0;
    background: var(--neutral-50);
  }

  .advantages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--spacing-xl);
  }

  .advantage-card {
    background: white;
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: var(--transition);
    position: relative;
  }

  .advantage-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .advantage-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-blue), var(--accent-orange));
    color: white;
    border-radius: 50%;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
  }

  .advantage-card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
  }

  /* CTA Section */
  .cta-section {
    padding: var(--spacing-2xl) 0;
    background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-dark));
    color: white;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
    color: white;
  }

  .cta-content p {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xl);
    color: rgba(255, 255, 255, 0.9);
  }

  .cta-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-actions .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .cta-actions .btn svg {
    width: 18px;
    height: 18px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .industries-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .industry-card.featured {
      grid-template-columns: 1fr;
    }

    .industry-image {
      height: 250px;
    }

    .services-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--spacing-lg);
    }

    .advantages-grid {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .section-header h2 {
      font-size: 2rem;
    }

    .section-header p {
      font-size: 1.125rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .service-card {
      padding: var(--spacing-lg);
    }

    .industries-grid {
      gap: var(--spacing-md);
    }

    .industry-item {
      padding: var(--spacing-md);
    }

    .advantage-card {
      padding: var(--spacing-lg);
      text-align: left;
    }

    .advantages-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .cta-content h2 {
      font-size: 2rem;
    }

    .cta-content p {
      font-size: 1.125rem;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
      gap: var(--spacing-sm);
    }

    .cta-actions .btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.75rem;
    }

    .section-header p {
      font-size: 1rem;
    }

    .service-card {
      padding: var(--spacing-md);
    }

    .service-card h3 {
      font-size: 1.25rem;
    }

    .advantage-card {
      padding: var(--spacing-md);
    }

    .advantage-number {
      width: 50px;
      height: 50px;
      font-size: 1.25rem;
    }

    .advantage-card h3 {
      font-size: 1.125rem;
    }
  }
</style>

<script>
  import { getCurrentLanguage, getTranslation } from '../utils/i18n';

  document.addEventListener('DOMContentLoaded', () => {
    // Initialize language
    const currentLang = getCurrentLanguage();
    updatePageLanguage(currentLang);

    // Intersection Observer for animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    // Observe all fade-in elements
    const fadeElements = document.querySelectorAll('.fade-in-up');
    fadeElements.forEach(el => observer.observe(el));

    // Add smooth scrolling to all internal links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Listen for language changes
    window.addEventListener('languageChanged', (e) => {
      updatePageLanguage(e.detail);
    });
  });

  function updatePageLanguage(lang) {
    // Update all elements with data-i18n attribute
    const elements = document.querySelectorAll('[data-i18n]');
    elements.forEach(element => {
      const key = element.getAttribute('data-i18n');
      if (key) {
        element.textContent = getTranslation(key, lang);
      }
    });
  }
</script>