    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .team-skills span {
    background: var(--neutral-100);
    color: var(--neutral-700);
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
  }

  /* Certifications */
  .certifications {
    padding: var(--spacing-2xl) 0;
  }

  .cert-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
  }

  .cert-category {
    background: white;
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--neutral-200);
  }

  .cert-category h3 {
    font-size: 1.375rem;
    margin-bottom: var(--spacing-md);
    color: var(--primary-blue);
    text-align: center;
  }

  .cert-items {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .cert-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm);
    background: var(--neutral-50);
    border-radius: var(--border-radius);
    transition: var(--transition);
  }

  .cert-item:hover {
    background: var(--primary-blue);
    color: white;
  }

  .cert-icon {
    font-size: 1.5rem;
    width: 40px;
    text-align: center;
  }

  /* CTA Section */
  .cta-section {
    padding: var(--spacing-2xl) 0;
    background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-dark));
    color: white;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
    color: white;
  }

  .cta-content p {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xl);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.95;
    line-height: 1.6;
  }

  .cta-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
