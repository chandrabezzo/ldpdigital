  }

  .team-info h3 {
    font-size: 1.375rem;
    margin-bottom: var(--spacing-xs);
  }

  .team-role {
    color: var(--primary-blue);
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: var(--spacing-sm);
  }

  .team-info p {
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
  }

  .team-skills {
