  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .story-content,
    .mv-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .achievement-cards {
      position: static;
      justify-content: center;
      margin-top: var(--spacing-md);
    }
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .story-text h2,
    .cta-content h2 {
