<style>
  /* About Hero */
  .about-hero {
    position: relative;
    height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    margin-top: 80px;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 102, 204, 0.8);
  }

  .hero-content h1 {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-sm);
    color: white;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.9;
  }

  .hero-breadcrumb {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xs);
    font-size: 1rem;
    opacity: 0.8;
  }

  .hero-breadcrumb a {
    color: white;
    text-decoration: none;
    transition: var(--transition);
  }

  .hero-breadcrumb a:hover {
    opacity: 0.8;
  }

  /* Company Story */
  .company-story {
    padding: var(--spacing-2xl) 0;
  }

  .story-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .story-text h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
  }

  .lead {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--primary-blue);
    margin-bottom: var(--spacing-md);
  }

  .story-text p {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
  }

  .story-visual {
    position: relative;
  }

  .visual-card {
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
    transform: rotate(3deg);
  }

  .visual-card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .achievement-cards {
    position: absolute;
    bottom: -30px;
    left: -30px;
    display: flex;
    gap: var(--spacing-sm);
  }

  .achievement-card {
    background: white;
    padding: var(--spacing-md);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-lg);
    text-align: center;
    min-width: 100px;
  }

  .achievement-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-blue);
    line-height: 1;
  }

  .achievement-label {
    font-size: 0.875rem;
    color: var(--neutral-600);
    margin-top: var(--spacing-xs);
  }

  /* Mission & Vision */
  .mission-vision {
    padding: var(--spacing-2xl) 0;
    background: var(--neutral-50);
  }

  .mv-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
  }

  .mv-card {
    background: white;
    padding: var(--spacing-2xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: var(--transition);
  }

  .mv-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .mv-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-dark));
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--spacing-md);
  }

  .mv-icon svg {
    width: 36px;
    height: 36px;
  }

  .mv-card h3 {
    font-size: 1.75rem;
    margin-bottom: var(--spacing-md);
  }

  .mv-card p {
    font-size: 1.125rem;
    line-height: 1.6;
  }

  /* Core Values */
  .core-values {
    padding: var(--spacing-2xl) 0;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
  }

  .value-card {
    background: white;
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
    position: relative;
    border: 2px solid transparent;
  }

  .value-card:hover {
    border-color: var(--primary-blue);
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .value-number {
    position: absolute;
    top: -15px;
    left: var(--spacing-lg);
    width: 40px;
    height: 40px;
    background: var(--accent-orange);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.125rem;
  }

  .value-card h3 {
    font-size: 1.5rem;
    margin: var(--spacing-md) 0 var(--spacing-sm);
    color: var(--primary-blue);
  }

  .value-card p {
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
  }

  /* Team Section */
  .team-section {
    padding: var(--spacing-2xl) 0;
    background: var(--neutral-50);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-xl);
  }

