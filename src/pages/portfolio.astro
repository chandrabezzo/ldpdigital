    <section class="case-studies">
      <div class="container">
        <div class="section-header fade-in-up">
          <h2 data-i18n="portfolio.case.title">Case Study Mendalam</h2>
          <p data-i18n="portfolio.case.subtitle">Analisis detail implementasi dan hasil yang dicapai</p>
        </div>

        <div class="case-study-featured fade-in-up">
          <div class="case-study-content">
            <div class="case-study-header">
              <div class="case-study-meta">
                <span class="case-study-category">ERP Implementation</span>
                <span class="case-study-duration">6 Bulan Implementasi</span>
              </div>
              <h3>Transformasi Digital Perusahaan Konstruksi Besar</h3>
              <p class="case-study-description">
