<section class="hero" id="home">
  <div class="hero-background">
    <div class="hero-gradient"></div>
    <div class="hero-pattern"></div>
  </div>

  <div class="container">
    <div class="hero-content">
      <div class="hero-text animate-fade-left">
        <h1>
          Solusi Software Terpadu untuk 
          <span class="gradient-text">Masa Depan Bisnis</span> Anda
        </h1>
        <p class="hero-description">
          LDP Digital adalah mitra terpercaya dalam transformasi digital perusahaan. 
          Kami membangun sistem ERP, software custom, dan solusi teknologi yang 
          mengoptimalkan operasional bisnis Anda.
        </p>
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">50+</div>
            <div class="stat-label">Proyek Selesai</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">30+</div>
            <div class="stat-label">Klien Puas</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">5+</div>
            <div class="stat-label">Tahun Pengalaman</div>
          </div>
        </div>
        <div class="hero-actions">
          <a href="/contact" class="btn btn-primary">Konsultasi Gratis</a>
          <a href="/services" class="btn btn-outline">Lihat Layanan</a>
        </div>
      </div>

      <div class="hero-visual animate-fade-right">
        <div class="visual-container">
          <div class="floating-card card-1">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                <polyline points="3.27,6.96 12,12.01 20.73,6.96"/>
                <line x1="12" y1="22.08" x2="12" y2="12"/>
              </svg>
            </div>
            <div class="card-content">
              <div class="card-title">ERP System</div>
              <div class="card-subtitle">Integrated Business Solution</div>
            </div>
          </div>

          <div class="floating-card card-2">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
                <line x1="8" y1="21" x2="16" y2="21"/>
                <line x1="12" y1="17" x2="12" y2="21"/>
              </svg>
            </div>
            <div class="card-content">
              <div class="card-title">Custom Software</div>
              <div class="card-subtitle">Tailored Solutions</div>
            </div>
          </div>

          <div class="floating-card card-3">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              </svg>
            </div>
            <div class="card-content">
              <div class="card-title">Secure & Reliable</div>
              <div class="card-subtitle">Enterprise Grade</div>
            </div>
          </div>

          <div class="hero-image">
            <img 
              src="https://images.pexels.com/photos/3184418/pexels-photo-3184418.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Modern office with technology solutions"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="scroll-indicator">
    <div class="scroll-arrow">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M7 13l3 3 7-7"/>
        <path d="M12 17l0-10"/>
        <path d="M7 7l5 5 5-5"/>
      </svg>
    </div>
    <span>Scroll untuk melihat lebih</span>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding: calc(80px + var(--spacing-lg)) 0 var(--spacing-lg);
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
  }

  .hero-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      var(--primary-blue) 0%, 
      var(--primary-blue-dark) 50%, 
      var(--neutral-900) 100%);
    opacity: 0.95;
  }

  .hero-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      radial-gradient(circle at 80% 50%, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 100px 100px, 80px 80px;
    animation: float 20s ease-in-out infinite;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .hero-text {
    color: white;
  }

  .hero-text h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--spacing-md);
    color: white;
  }

  .gradient-text {
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--spacing-xl);
  }

  .hero-stats {
    display: flex;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #FFD700;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
    margin-top: var(--spacing-xs);
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .visual-container {
    position: relative;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-image {
    position: relative;
    width: 300px;
    height: 400px;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
    transform: rotate(-5deg);
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .floating-card {
    position: absolute;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: var(--border-radius);
    padding: var(--spacing-md);
    box-shadow: var(--shadow-lg);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    animation: float 6s ease-in-out infinite;
  }

  .card-1 {
    top: 20%;
    left: -10%;
    animation-delay: 0s;
  }

  .card-2 {
    top: 60%;
    right: -15%;
    animation-delay: 2s;
  }

  .card-3 {
    bottom: 10%;
    left: -5%;
    animation-delay: 4s;
  }

  .card-icon {
    width: 40px;
    height: 40px;
    background: var(--primary-blue);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-icon svg {
    width: 20px;
    height: 20px;
  }

  .card-title {
    font-weight: 600;
    color: var(--neutral-800);
    font-size: 0.9rem;
  }

  .card-subtitle {
    font-size: 0.75rem;
    color: var(--neutral-600);
  }

  .scroll-indicator {
    position: absolute;
    bottom: var(--spacing-lg);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xs);
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
  }

  .scroll-arrow {
    width: 24px;
    height: 24px;
    animation: bounce 2s infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(2deg); }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
  }

  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--spacing-xl);
    }

    .hero-text h1 {
      font-size: 3rem;
    }

    .visual-container {
      height: 400px;
    }

    .hero-image {
      width: 250px;
      height: 300px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 90vh;
      padding: calc(80px + var(--spacing-md)) 0 var(--spacing-md);
    }

    .hero-text h1 {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1.125rem;
    }

    .hero-stats {
      justify-content: center;
    }

    .hero-actions {
      justify-content: center;
    }

    .visual-container {
      height: 300px;
    }

    .hero-image {
      width: 200px;
      height: 250px;
    }

    .floating-card {
      padding: var(--spacing-sm);
      font-size: 0.875rem;
    }

    .card-icon {
      width: 32px;
      height: 32px;
    }

    .card-icon svg {
      width: 16px;
      height: 16px;
    }
  }
</style>